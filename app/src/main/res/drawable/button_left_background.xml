<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
    <layer-list>
        <item  android:top="14dp" android:right="12dp" android:bottom="12dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/white"/>
                <size android:width="@dimen/button_width" android:height="@dimen/button_height"/>
                <corners android:topRightRadius="@dimen/button_corner_radius" android:bottomRightRadius="@dimen/button_corner_radius"/>
                <stroke android:color="@color/black" android:width="1dp"/>
            </shape>
        </item>
    </layer-list>
    </item>

<item android:state_pressed="false">
    <layer-list>
<!--        black shadow-->
        <item  android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#05000000"/>
            <corners android:topRightRadius="90dp" android:bottomRightRadius="90dp"/>
        </shape>
        </item>
        <item  android:top="20dp" android:bottom="2dp" android:right="2dp">
            <shape android:shape="rectangle">
                <solid android:color="#05000000"/>
                <corners android:topRightRadius="80dp" android:bottomRightRadius="80dp"/>
            </shape>
        </item>
        <item  android:top="20dp" android:bottom="4dp" android:right="4dp">
            <shape android:shape="rectangle">
                <solid android:color="#05000000"/>
                <corners android:topRightRadius="65dp" android:bottomRightRadius="65dp"/>
            </shape>
        </item>
        <item  android:top="20dp" android:bottom="8dp" android:right="8dp">
            <shape android:shape="rectangle">
                <solid android:color="#05000000"/>
                <corners android:topRightRadius="@dimen/button_corner_radius" android:bottomRightRadius="@dimen/button_corner_radius"/>
            </shape>
        </item>
<!--        white shadow-->
        <item  android:bottom="22dp"  android:right="20dp" >
            <shape android:shape="rectangle">
                <solid android:color="#10ffffff"/>
                <corners android:topRightRadius="80dp" android:bottomRightRadius="@dimen/button_corner_radius"/>
            </shape>
        </item>
        <item  android:bottom="22dp"  android:right="20dp"  android:top="2dp">
            <shape android:shape="rectangle">
                <solid android:color="#10ffffff"/>
                <corners android:topRightRadius="70dp" android:bottomRightRadius="@dimen/button_corner_radius"/>
            </shape>
        </item>
        <item  android:bottom="22dp"  android:right="20dp"  android:top="8dp">
            <shape android:shape="rectangle">
                <solid android:color="#10ffffff"/>
                <corners android:topRightRadius="60dp" android:bottomRightRadius="@dimen/button_corner_radius"/>
            </shape>
        </item>

     <item android:top="14dp" android:right="12dp" android:bottom="12dp">
         <shape android:shape="rectangle">
             <solid android:color="@color/white"/>
             <size android:width="@dimen/button_width" android:height="@dimen/button_height"/>
             <corners android:topRightRadius="@dimen/button_corner_radius" android:bottomRightRadius="@dimen/button_corner_radius"/>
         </shape>
     </item>

    </layer-list>
</item>



</selector>