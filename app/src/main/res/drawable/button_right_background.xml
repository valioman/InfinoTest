<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="14dp" android:left="14dp" android:bottom="12dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <size android:width="@dimen/button_width" android:height="@dimen/button_height"/>
                    <corners android:topLeftRadius="@dimen/button_corner_radius" android:bottomLeftRadius="@dimen/button_corner_radius"/>
