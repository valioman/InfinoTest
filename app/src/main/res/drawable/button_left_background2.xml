<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true" android:top="14dp" android:right="12dp" android:bottom="12dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/white"/>
                <size android:width="@dimen/button_width" android:height="@dimen/button_height"/>
                <corners android:topRightRadius="@dimen/button_corner_radius" android:bottomRightRadius="@dimen/button_corner_radius"/>

            </shape>
        </item>

<item >
    <layer-list>
        <item  android:top="20dp">
            <shape android:shape="rectangle">
                <gradient android:startColor="#45000000"  android:endColor="#00000000"
                    android:angle="45"/>
                <corners android:topRightRadius="80dp"
                    android:bottomRightRadius="80dp"/>
            </shape>
        </item>
        <item  android:bottom="40dp" android:right="20dp">
            <shape android:shape="rectangle">
                <gradient android:startColor="#05ffffff"  android:endColor="#aaffffff"
                    android:angle="180"/>
                <corners android:topRightRadius="220dp"
                    />
            </shape>
        </item>
     <item android:top="14dp" android:right="12dp" android:bottom="12dp">
         <shape android:shape="rectangle">
             <solid android:color="@color/white"/>
             <size android:width="@dimen/button_width" android:height="@dimen/button_height"/>
             <corners android:topRightRadius="@dimen/button_corner_radius" android:bottomRightRadius="@dimen/button_corner_radius"/>
         </shape>
     </item>

    </layer-list>
</item>


</selector>